{% extends 'base.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}
    <h1>Candidature index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entreprise</th>
                <th>Poste</th>
                <th>Statut</th>
                <th>Lien_offre</th>
                <th>Adresse</th>
                <th>Notes</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidature in candidatures %}
            <tr>
                <td>{{ candidature.id }}</td>
                <td>{{ candidature.entreprise }}</td>
                <td>{{ candidature.poste }}</td>
                <td>{{ candidature.statut }}</td>
                <td>{{ candidature.lienOffre }}</td>
                <td>{{ candidature.adresse }}</td>
                <td>{{ candidature.notes }}</td>
                <td>{{ candidature.date ? candidature.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_candidature_show', {'id': candidature.id}) }}">show</a>
                    <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_candidature_new') }}">Create new</a>
{% endblock %}
